<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="false"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/l1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <TextView
                android:id="@+id/txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Clique em uma das imagens para escolher" />

            <ImageButton
                android:id="@+id/btnPedra"
                android:layout_marginTop="25dp"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:onClick="btnPedra"
                android:scaleType="centerCrop"
                android:background="@color/white"
                android:src="@drawable/pedra"/>

            <ImageButton
                android:id="@+id/btnPapel"
                android:layout_marginTop="25dp"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:onClick="btnPapel"
                android:scaleType="centerCrop"
                android:background="@color/white"
                android:src="@drawable/papel"/>

            <ImageButton
                android:id="@+id/btnTesoura"
                android:layout_marginTop="25dp"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:onClick="btnTesoura"
                android:scaleType="centerCrop"
                android:background="@color/white"
                android:src="@drawable/tesoura"/>

            <Button
                android:id="@+id/btnHistorico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Historico"
                android:onClick="historico"
                android:layout_alignParentBottom="true" />

        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>